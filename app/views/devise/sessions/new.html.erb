<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container">
  <h2>Modal Example</h2>
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Login
  </button>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">
      Register
  </button>
<!-- The Modal 1 -->
  <div class="modal" id="myModal">
    <div class="modal-dialog" style="margin-top: 12%;">
      <div class="modal-content" style="width: 150%;" >
        <div class="row">
          <div class="col1" style="background-color: darkslateblue; width: 40%">
            <div style="object-position: center; margin-top: 25%;">
              <p style="display: flex; align-items: center;">
                <span class="s">$</span>
                <span class="plitter">plitter</span>
              </p>
                <span Class="split" style="position: relative;">SPLIT IT UP</span>
            </div>
          </div>
            
          <div class="col2" style="margin-left: 5%;">
            <img src="images/close.png" alt="close" type="button" class="close" data-dismiss="modal" style="text-align: right; margin-top:2%; width: 7%; margin-right: -15%;">
            <br/>
            <p style="color: darkblue; font-family: Raleway; text-align: left; font-weight: 700;">LOGIN</p>
            <p style="color: rgba(102, 102, 102, 1);">Dont have an account? <a href="#" style="color: darkslateblue">Create your account</a><br/>it takes less than a minute.</p>
              <div class="login-form">
                <form>
                  <div class="form-group">
                    <input type="text" class="form-control" id="user" name="user" onchange="hideIcon(this);" Placeholder="Email" />
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" id="pwd" name="pwd" onchange="hideIcon(this);" Placeholder="Password" />
                  </div>
                  <button type="submit" class="btn btn-warning rounded-pill" id="log-btn">Login</button>
                </form>
                  <br/>
                <p style="text-align: center;">Forgot password</p>
                  <br/>
              </div>
           </div>
        </div>
    </div>
  </div>
</div> 
    
    
